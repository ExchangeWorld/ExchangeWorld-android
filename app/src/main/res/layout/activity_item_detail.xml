<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arthome.newexchangeworld.ItemPage.ItemDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/owner_name_detail"
        android:drawableLeft="@drawable/people"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:layout_below="@+id/goods_name_detail"
        android:layout_alignLeft="@+id/goods_name_detail"
        android:layout_alignStart="@+id/goods_name_detail"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/goods_image_detail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="30dp"
        android:id="@+id/goods_name_detail"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/goods_image_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/goods_description_detail"
        android:layout_below="@+id/owner_name_detail"
        android:layout_alignLeft="@+id/owner_name_detail"
        android:layout_alignStart="@+id/owner_name_detail"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="關注"
        android:id="@+id/textView22"
        android:drawableLeft="@drawable/heart"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:drawableTint="#f66060"
        android:layout_alignTop="@+id/owner_name_detail"
        android:layout_toRightOf="@+id/owner_name_detail"
        android:layout_toEndOf="@+id/owner_name_detail"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>
